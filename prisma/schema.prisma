generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  last_name String
  email String @unique
  password String
  cuil BigInt @unique
  gender String? 
  phone Int @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  student Student?
  teacher Teacher?
  administer Administrator?
} 

model Student {
  id Int @id
  user User @relation(fields: [id], references: [id])
  legajo Int
}

model Teacher {
  id Int @id
  user User @relation(fields: [id], references: [id])
  tuition BigInt
  specialty String? 
}

model Administrator {
  id Int @id
  user User @relation(fields: [id], references: [id])
  area String
  position String? 
}
